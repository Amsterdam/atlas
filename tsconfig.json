{
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "**/*.test.ts",
    "**/*.test.tsx"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "noEmit": true,
    "strict": true,
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "allowJs": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "suppressImplicitAnyIndexErrors": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "typeRoots": [
      "src/typings",
      "node_modules/@types"
    ],
    "resolveJsonModule": true
  }
}
